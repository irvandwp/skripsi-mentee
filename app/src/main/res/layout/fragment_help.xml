<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.irvandwiputra.skripsimentee.Fragment.HelpFragment">

    <RelativeLayout
        android:id="@+id/helpWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Help"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <Button
            android:id="@+id/helpButtonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Submit" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtHelpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp">

            <EditText
                android:id="@+id/textProblems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtHelpLabel"
                android:ems="10"
                android:gravity="top|start"
                android:hint="Explain your problem here"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="8"
                android:scrollbars="vertical">

                <requestFocus />
            </EditText>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</FrameLayout>
